<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#007af5">

        <Button
            android:id="@+id/head"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#007af5"
            android:drawableLeft="@drawable/white_left"
            android:gravity="left|center_vertical"
            android:paddingVertical="15dp"
            android:paddingLeft="15dp"
            android:text=" 登录"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:drawableLeft="@drawable/zhanghao"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:paddingTop="3dp"
            android:text="" />

        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/layer_list2"
            android:ems="10"
            android:hint="请输入账号"
            android:inputType="text"
            android:paddingVertical="20dp"
            android:paddingLeft="20dp"
            android:textCursorDrawable="@null"
            android:textSize="25dp"
            android:textColor="#909090"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:drawableLeft="@drawable/suo"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:paddingTop="3dp"
            android:text="" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/layer_list2"
            android:ems="10"
            android:hint="请输入密码"
            android:inputType="text"
            android:paddingVertical="20dp"
            android:paddingLeft="20dp"
            android:textCursorDrawable="@null"
            android:textSize="25dp"
            android:textColor="#909090"/>
    </LinearLayout>

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        android:background="@drawable/login_button_style"
        android:textColor="#f0f0f0"
        android:textSize="22dp"
        android:paddingVertical="5dp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="10dp"/>

    <Button
        android:id="@+id/register"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f0f0f0"
        android:text="还没有账户?注册"
        android:textColor="#007af5" />
</LinearLayout>