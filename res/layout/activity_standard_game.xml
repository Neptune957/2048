<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbf8f1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:paddingVertical="10dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="0"
            android:gravity="center_vertical"
            android:textSize="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="分数"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/grid_board_style"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/grid_00"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@drawable/grid_style"
                android:gravity="center"
                android:text="0"
                android:textSize="40dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/grid_01"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_marginRight="10dp"
                android:background="@drawable/grid_style"
                android:gravity="center"
                android:text="0"
                android:textSize="40dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/grid_02"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@drawable/grid_style"
                android:gravity="center"
                android:text="0"
                android:textSize="40dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/grid_03"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/grid_style"
                android:gravity="center"
                android:text="0"
                android:textSize="40dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/grid_10"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@drawable/grid_style"
                android:gravity="center"
                android:text="0"
                android:textSize="40dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/grid_11"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@drawable/grid_style"
                android:gravity="center"
                android:text="0"
                android:textSize="40dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/grid_12"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@drawable/grid_style"
                android:gravity="center"
                android:text="0"
                android:textSize="40dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/grid_13"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/grid_style"
                android:gravity="center"
                android:text="0"
                android:textSize="40dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/grid_20"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@drawable/grid_style"
                android:gravity="center"
                android:text="0"
                android:textSize="40dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/grid_21"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@drawable/grid_style"
                android:gravity="center"
                android:text="0"
                android:textSize="40dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/grid_22"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@drawable/grid_style"
                android:gravity="center"
                android:text="0"
                android:textSize="40dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/grid_23"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/grid_style"
                android:gravity="center"
                android:text="0"
                android:textSize="40dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/grid_30"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@drawable/grid_style"
                android:gravity="center"
                android:text="0"
                android:textSize="40dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/grid_31"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@drawable/grid_style"
                android:gravity="center"
                android:text="0"
                android:textSize="40dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/grid_32"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@drawable/grid_style"
                android:gravity="center"
                android:text="0"
                android:textSize="40dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/grid_33"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/grid_style"
                android:gravity="center"
                android:text="0"
                android:textSize="40dp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/end_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:gravity="center"
        android:text=""
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="vertical">

            <Button
                android:id="@+id/up_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:background="@drawable/up_button"
                android:textSize="40dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/left_button"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginRight="60dp"
                    android:layout_weight="0"
                    android:background="@drawable/left_button"
                    android:textSize="40dp" />

                <Button
                    android:id="@+id/right_button"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_weight="0"
                    android:background="@drawable/right_button"
                    android:textSize="40dp" />
            </LinearLayout>

            <Button
                android:id="@+id/down_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:background="@drawable/down_button"
                android:textSize="40dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/clear_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="135dp"
                android:layout_height="85dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="0"
                android:background="@drawable/stop_button_style"
                android:text="结束"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/save_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="135dp"
                android:layout_height="85dp"
                android:layout_weight="0"
                android:background="@drawable/save_button_style"
                android:text="存档"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/confirm_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="135dp"
                android:layout_height="85dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="0"
                android:background="@drawable/remove_button_style"
                android:text="确定"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <Button
                android:id="@+id/back_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="135dp"
                android:layout_height="85dp"
                android:layout_weight="0"
                android:background="@drawable/save_button_style"
                android:text="返回"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>