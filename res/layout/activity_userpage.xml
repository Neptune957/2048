<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:theme="@style/AppTheme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#007af5">

        <Button
            android:id="@+id/head"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#007af5"
            android:drawableLeft="@drawable/white_left"
            android:gravity="left|center_vertical"
            android:paddingTop="20dp"
            android:paddingLeft="15dp"
            android:text=" 用户"
            android:textColor="#cce5ff"
            android:textSize="20dp" />
    </LinearLayout>

    <Button
        android:id="@+id/user"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#007af5"
        android:drawableLeft="@drawable/boy"
        android:drawableRight="@drawable/white_right"
        android:gravity="left|center_vertical"
        android:paddingVertical="25dp"
        android:paddingLeft="20dp"
        android:paddingRight="13dp"
        android:text="    无"
        android:textSize="25dp"
        android:textColor="#cce5ff" />

    <Button
        android:id="@+id/balance"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layer_list"
        android:drawableLeft="@drawable/balance"
        android:drawableRight="@drawable/right"
        android:gravity="left|center_vertical"
        android:paddingVertical="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="20dp"
        android:text="   余额"
        android:textSize="22dp" />

    <Button
        android:id="@+id/history"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/layer_list2"
        android:drawableLeft="@drawable/history"
        android:drawableRight="@drawable/right"
        android:gravity="left|center_vertical"
        android:paddingVertical="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="20dp"
        android:text="   游戏记录"
        android:textSize="22dp" />

    <Button
        android:id="@+id/rank"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="@drawable/layer_list2"
        android:drawableLeft="@drawable/rank"
        android:drawableRight="@drawable/right"
        android:gravity="left|center_vertical"
        android:paddingVertical="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="20dp"
        android:text="   排行榜"
        android:textSize="22dp" />

    <Button
        android:id="@+id/more"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="@drawable/layer_list2"
        android:drawableLeft="@drawable/more"
        android:drawableRight="@drawable/right"
        android:gravity="left|center_vertical"
        android:paddingVertical="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="20dp"
        android:text="   玩法介绍"
        android:textSize="22dp" />

    <Button
        android:id="@+id/continueGame"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="@drawable/layer_list2"
        android:drawableLeft="@drawable/using_now"
        android:drawableRight="@drawable/right"
        android:gravity="left|center_vertical"
        android:paddingVertical="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="20dp"
        android:text="   我的存档"
        android:textSize="22dp" />


    <Button
        android:id="@+id/info"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/layer_list"
        android:drawableLeft="@drawable/info"
        android:drawableRight="@drawable/right"
        android:gravity="left|center_vertical"
        android:paddingVertical="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="20dp"
        android:text="   开发信息"
        android:textSize="22dp" />

    <Button
        android:id="@+id/logout"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:background="#ff5c6c"
        android:gravity="center_horizontal|center_vertical"
        android:paddingVertical="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="20dp"
        android:text="退出登录"
        android:textColor="#ffffff"
        android:textSize="22dp" />

</LinearLayout>